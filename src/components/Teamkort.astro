---
const { variant, imgPath, navn, tekst } = Astro.props;
---

<div class="kort" data-variant={variant}>
  <div class="placeholder">
    <img src={imgPath} alt="danselÃ¦rer" />
  </div>
  <div>
    <h4 class="navn">{navn}</h4>
    <p>{tekst}</p>
  </div>
</div>

<style>
  .placeholder {
    display: block;
    height: 300px;
    width: 100%;
    background-color: var(--secondary3);
    margin-bottom: 1rem;
  }

  .navn {
    color: var(--secondary4);
    margin-bottom: 0.5rem;
  }
  p {
    margin-bottom: 3rem;
  }

  @media (min-width: 900px) {
    .kort {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin-bottom: 5rem;
    }
    .placeholder {
      height: 500px;
      margin-bottom: 0;
    }
    .navn {
      margin-bottom: 1rem;
    }
    p {
      margin-bottom: 0;
    }

    [data-variant="left"] {
      margin-left: 20%;
    }
    [data-variant="right"] {
