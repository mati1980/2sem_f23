---
import Animation from "../components/Animation.astro";
import Button from "../components/Button.astro";
---

<span class="video_placeholder">
  <video id="background_video" src="../video.webm" autoplay muted loop></video>
  <img id="background_img" src="/img/mobil_forside_img.webp" alt="danseundervisning" />
  <div class="video_text">
    <div class="fyld">
      <img src="/img/5element.webp" alt="twin dance studio" />
      <h1>Velkommen til TWIN Dance Studio</h1>
      <p>Her skaber vi glæde gennem motion, dans og musik.</p>
      <a class="knap" href="../holdplan">
        <Button variant="mørk" size="lille">Se vores hold</Button>
      </a>
    </div>
    <Animation />
  </div>
</span>

<style>
  /* Video */
  #background_img {
    grid-area: 1/1;
    height: 400px;
    width: 100%;
    object-fit: cover;
    z-index: -1;
  }
  #background_video {
    display: none;
  }
  .video_text {
    grid-area: 1/1;
  }
  .video_placeholder {
    display: grid;
  }
  .fyld {
    padding: 1.5rem;
    margin-top: 200px;
    text-align: right;
  }
  .fyld img {
    display: none;
  }
  h1 {
    color: var(--secondary5);
    font-size: 38px;
  }
  p {
    color: var(--secondary2);
    font-size: 14px;
    padding-bottom: 1rem;
  }
  .knap {
    padding-bottom: 2rem;
  }

  @media (min-width: 700px) {
    h1 {
      font-size: 40px;
      padding-left: 1rem;
    }
    p {
      font-size: 18px;
    }
  }

  @media (min-width: 900px) {
    .fyld {
      padding: 3rem;
    }
    #background_video {
      display: block;
      grid-area: 1/1;
      height: 600px;
      width: 100%;
      object-fit: cover;
      z-index: -1;
    }
    #background_img {
      display: none;
    }
  }

  @media (min-width: 1100px) {
    #background_video {
      height: 700px;
    }
    .fyld img {
      display: block;
      width: 20%;
      margin-left: auto;
      padding-top: 2rem;
    }
    h1 {
      font-size: 64px;
    }
    p {
      font-size: 22px;
    }
    .fyld {
      margin-left: 40%;
      margin-top: 0;
    }
  }
</style>
