---
import Button from "../components/Button.astro";
---

<div class="kontakt">
  <div class="fyld">
    <h2>Har du spørgsmål?</h2>
    <h2 class="h2">Er du altid velkommen til at kontakte os.</h2>
    <a class="knap" href="../praktisk">
      <Button variant="mørk" size="stor">Kontakt os</Button>
    </a>
  </div>
</div>

<style>
  .kontakt {
    background-image: url("/img/mobil_gradient.webp");
    height: 420px;
    background-repeat: round;
  }
  .fyld {
    padding: 1.5rem;
    padding-top: 10%;
    display: grid;
  }
  .knap {
    margin: auto;
    padding-top: 3rem;
  }
  h2 {
    color: var(--secondary2);
    padding-bottom: 2rem;
  }
  .h2 {
    color: var(--secondary5);
    font-size: 40px;
  }

  @media (min-width: 600px) {
    .kontakt {
      background-image: url("/img/gradient.webp");
      height: 500px;
    }
  }

  @media (min-width: 900px) {
    .kontakt {
      height: 700px;
    }
    .h2 {
      font-size: 64px;
    }
    .knap {
      padding-top: 4rem;
    }
    .fyld {
      padding: 3rem;
      padding-top: 14%;
    }
  }
  @media (min-width: 1100px) {
    .kontakt {
      margin-top: 5rem;
    }
  }
</style>
